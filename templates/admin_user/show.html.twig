{% extends 'base.html.twig' %}

{% block title %}Utilisateur{% endblock %}

{% block body %}
    <h1>Utilisateur</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Rôles</th>
                <td>   {% for role in user.roles %}
                    {# Si pas dernier élement mettre une virgule #}
                        {{constant("App\\Enum\\UserRoleEnum::" ~ role)}}
                        {% if not loop.last %},{% endif %}    
                    {% endfor %}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ user.lastname }}</td>
            </tr>
            <tr>
                <th>Prénom</th>
                <td>{{ user.firstname }}</td>
            </tr>
        </tbody>
    </table>
<div class="d-flex flex-column align-items-start gap-2 ">
    <a href="{{ path('app_admin_user_index') }}" class="btn btn-secondary">Retour</a>

    <a href="{{ path('app_admin_user_edit', {'id': user.id}) }}" class="btn btn-primary">Modifier</a>

    {{ include('admin_user/_delete_form.html.twig') }}
{% endblock %}
