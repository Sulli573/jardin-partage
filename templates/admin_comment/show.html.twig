{% extends 'base.html.twig' %}

{% block title %}Commentaire
{% endblock %}

{% block body %}
	<h1>Commentaire</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Message</th>
				<td>
					{{ comment.message }}
					<p>Nombre de caractères :
						{{ comment.getLenghtMessage}}</p>
				</td>

			</tr>
			<tr>
				<th>Créé le</th>
				<td>{{ comment.createdAt ? comment.createdAt|date('d/m/Y H:i') : '' }}</td>
			</tr>
			<tr>
				<th>Du Post</th>
				{# Récupération de l'id du post  #}
				<td>
					<a href="{{ path("app_admin_post_show", {id:comment.post.id }) }}" class="text-primary" target="_blank">Voir le Post</a>
				</td>
			</tr>
		</tbody>
	</table>
	<div class="d-flex flex-column align-items-start gap-2">
		<a href="{{ path('app_admin_comment_edit', {'id': comment.id}) }}" class="btn btn-primary">Modifier</a>

		{{ include('admin_comment/_delete_form.html.twig') }}

		<a href="{{ path('app_admin_comment_index') }}" class="btn btn-secondary">Retour</a>
	</div>
{% endblock %}
