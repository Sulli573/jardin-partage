{% extends 'base.html.twig' %}

{% block title %}Plante
{% endblock %}

{% block body %}
	<h1>Plante</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ plante.id }}</td>
			</tr>
			<tr>
				<th>Nom</th>
				<td>{{ plante.nom }}</td>
			</tr>
			<tr>
				<th>Type</th>
				<td>{{ plante.type }}</td>
			</tr>
			<tr>
				<th>Date de plantation</th>
				<td>{{ plante.datePlantation ? plante.datePlantation|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
			<tr>
				<th>Periode de croissance</th>
				<td>{{ plante.periodeCroissance }}</td>
			</tr>
			<tr>
				<th>Créé le</th>
				<td>{{ plante.createdAt ? plante.createdAt|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
		</tbody>
	</table>
	<div class="d-flex flex-column align-items-start gap-2">
		<a href="{{ path('app_admin_plante_edit', {'id': plante.id}) }}" class="btn btn-primary">Modifier</a>

		{{ include('admin_plante/_delete_form.html.twig') }}

		<a href="{{ path('app_admin_plante_index') }}" class="btn btn-secondary">Retour</a>
	</div>
{% endblock %}
