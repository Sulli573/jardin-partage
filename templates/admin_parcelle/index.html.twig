{% extends 'base.html.twig' %}

{% block title %}Liste des parcelles{% endblock %}

{% block body %}
    <h1>Liste des parcelles</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Identifiant</th>
                <th>Numéro</th>
                <th>Superficie</th>
                <th>Date de création</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for parcelle in parcelles %}
            <tr>
                <td>{{ parcelle.id }}</td>
                <td>{{ parcelle.number }}</td>
                <td>{{ parcelle.size }}</td>
                <td>{{ parcelle.createdAt ? parcelle.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_admin_parcelle_show', {'id': parcelle.id}) }}">Afficher</a>
                    <a href="{{ path('app_admin_parcelle_edit', {'id': parcelle.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_parcelle_new') }}">Créer une nouvelle parcelle</a>
    <a href="{{ path('app_admin') }}">Tableau de Bord</a>
{% endblock %}
