{% extends 'base.html.twig' %}

{% block title %}Liste des parcelles{% endblock %}

{% block body %}
    <h1>Liste des parcelles</h1>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Identifiant</th>
                <th>Numéro</th>
                <th>Superficie</th>
                <th>Date de création</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody  class="table-group-divider">
        {% for parcelle in parcelles %}
            <tr>
                <td>{{ parcelle.id }}</td>
                <td>{{ parcelle.number }}</td>
                <td>{{ parcelle.size }}</td>
                <td>{{ parcelle.createdAt ? parcelle.createdAt|date('d/m/Y H:i') : '' }}</td>
                <td>
                    <a href="{{ path('app_admin_parcelle_show', {'id': parcelle.id}) }}" class="btn btn-secondary">Afficher</a>
                    <a href="{{ path('app_admin_parcelle_edit', {'id': parcelle.id}) }}" class="btn btn-primary">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Aucune parcelle n'as été trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_parcelle_new') }}" class="btn btn-success">Créer une nouvelle parcelle</a>
{% endblock %}
