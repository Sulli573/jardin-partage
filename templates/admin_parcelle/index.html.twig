{% extends 'base.html.twig' %}

{% block title %}Parcelle index{% endblock %}

{% block body %}
    <h1>Parcelle index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Number</th>
                <th>Size</th>
                <th>CreatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for parcelle in parcelles %}
            <tr>
                <td>{{ parcelle.id }}</td>
                <td>{{ parcelle.number }}</td>
                <td>{{ parcelle.size }}</td>
                <td>{{ parcelle.createdAt ? parcelle.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_admin_parcelle_show', {'id': parcelle.id}) }}">show</a>
                    <a href="{{ path('app_admin_parcelle_edit', {'id': parcelle.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_parcelle_new') }}">Create new</a>
    <a href="{{ path('app_admin') }}">Tableau de Bord</a>
{% endblock %}
